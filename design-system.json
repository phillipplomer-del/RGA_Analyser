{
  "meta": {
    "name": "Aqua Design System",
    "version": "1.0.0",
    "description": "A modern, gradient-focused design system with dual-theme support (light/dark) featuring smooth animations and accessible color contrasts.",
    "lastUpdated": "2024-12-24",
    "frameworks": ["React", "Tailwind CSS 4", "Vite"]
  },

  "designPrinciples": {
    "overview": "This design system prioritizes visual harmony through gradient-based accents, smooth micro-interactions, and a cohesive color palette that adapts between light and dark modes.",
    "principles": [
      {
        "name": "Gradient-First",
        "description": "Use gradients as primary visual elements for emphasis, progress indicators, and interactive states. Solid colors serve as secondary accents."
      },
      {
        "name": "Smooth Motion",
        "description": "All interactive elements should have smooth transitions using cubic-bezier(0.4, 0, 0.2, 1) timing. Animations should feel natural and not jarring."
      },
      {
        "name": "Dual-Theme Harmony",
        "description": "Light and dark modes use complementary but distinct color palettes. Light mode uses cool tones (mint/cyan/blue), dark mode uses warm tones (gold/lime/green)."
      },
      {
        "name": "Subtle Depth",
        "description": "Use soft shadows and elevation changes on hover to create depth without harsh contrasts. Cards should feel like they float above the surface."
      },
      {
        "name": "Progressive Disclosure",
        "description": "Interactive elements reveal additional visual feedback on hover/focus. Text underlines animate in, buttons lift, cards elevate."
      }
    ]
  },

