  "animations": {
    "timing": {
      "default": "cubic-bezier(0.4, 0, 0.2, 1)",
      "description": "Standard easing for all transitions - smooth acceleration and deceleration"
    },
    "durations": {
      "fast": "150ms",
      "normal": "300ms",
      "slow": "400ms",
      "verySlow": "500ms"
    },
    "effects": {
      "buttonHover": {
        "transform": "translateY(-2px) scale(1.02)",
        "shadow": "0 10px 25px rgba(0, 222, 224, 0.3)",
        "additional": "Shimmer overlay animation from left to right",
        "class": "btn-animate"
      },
      "cardHover": {
        "transform": "translateY(-8px) scale(1.01)",
        "duration": "400ms",
        "class": "card-animate"
      },
      "iconButtonHover": {
        "transform": "scale(1.15) rotate(5deg)",
        "shadow": "0 8px 20px rgba(0, 222, 224, 0.25)",
        "class": "icon-btn-animate"
      },
      "chipHover": {
        "transform": "translateY(-3px) scale(1.05)",
        "duration": "250ms",
        "class": "chip-animate"
      },
      "statCardHover": {
        "transform": "translateY(-6px) scale(1.02)",
        "shadow": "0 20px 40px rgba(0, 222, 224, 0.25)",
        "class": "stat-card-animate"
      },
      "listItemHover": {
        "transform": "translateX(8px)",
        "background": "surface-card-muted",
        "class": "list-item-animate"
      },
      "progressBarHover": {
        "transform": "scaleY(1.5)",
        "class": "progress-animate"
      },
      "avatarHover": {
        "transform": "scale(1.1)",
        "shadow": "0 8px 25px rgba(0, 222, 224, 0.3)",
        "class": "avatar-animate"
      },
      "clickableText": {
        "description": "Gradient underline animates from 0 to 100% width, text shifts 4px right",
        "underlineGradient": "linear-gradient(90deg, #00E097, #00DEE0, #0050E0)",
        "darkModeGradient": "linear-gradient(90deg, #E0BD00, #9EE000, #45F600)",
        "class": "clickable-text"
      },
      "gradientShift": {
        "description": "Background position animates for gradient movement effect",
        "keyframes": "0% { background-position: 0% 50%; } 50% { background-position: 100% 50%; } 100% { background-position: 0% 50%; }",
        "duration": "3s infinite",
        "class": "gradient-shift"
      },
      "glowOnHover": {
        "filter": "drop-shadow(0 0 8px rgba(0, 222, 224, 0.5))",
        "darkModeFilter": "drop-shadow(0 0 8px rgba(158, 224, 0, 0.5))",
        "class": "glow-animate"
      },
      "barChartHover": {
        "transform": "scaleY(1.05)",
        "filter": "brightness(1.1)",
        "class": "bar-animate"
      },
      "float": {
        "keyframes": "0%, 100% { transform: translateY(0px); } 50% { transform: translateY(-10px); }",
        "duration": "2s ease-in-out infinite",
        "class": "float-animate"
      }
    }
  },

